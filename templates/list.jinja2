{% extends "page.jinja2" %}
{% block content %}
{% for lfg in lfgs %}
    <div class="lfg--block lfg--padding-1">
        <div class="lfg--vertical-top lfg--flex-row">
            <div style="position: relative;">
                <img class="lfg--display-block" src="{{ avatar_url }}">
                <!--<div class="lfg--color-success" style="background-color: #333333;position:absolute; bottom:24px; right:0;">+32</div>-->
            </div>
            <div class="lfg--flex-grow-2">
                <div class="lfg--padding-1">
                    <p class="lfg--margin-0 lfg--text-uppercase lfg--text-bold">{{ lfg["name"] }}</p>
                </div>
                <div class="lfg--padding-1">
                    <div class="lfg--progress-bar-outer" style="position: relative;">
                        <span style="position: absolute; left: 50%;">1/10</span>
                        <div class="lfg--progress-bar-inner" style="width: 20%"></div>
                    </div>
                </div>
            </div>
            <div class="lfg--flex-grow-1 lfg--padding-1 lfg--text-center lfg--color-secondary">
                <i class="material-icons lfg--color-secondary">mic</i>
                <i class="material-icons lfg--color-secondary">network_check</i>
            </div>
            <div class="lfg--text-right">
                <a class="lfg--button" href="/group/{{ lfg["id"] }}">Join</a>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}
